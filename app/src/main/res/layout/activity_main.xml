<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#99cc66"
    android:id="@+id/caculate">


    <TextView
        android:id="@+id/strIn"
        android:layout_width="wrap_content"
        android:layout_height="87dp"
        android:textSize = "50dp"
        android:textColor="@color/white"/>


    <Button
        android:background="#00000000"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="."
        android:id="@+id/buttonP"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="40dp"
        android:onClick= "number4"
        android:textColor="@color/white"/>

    <Button
        android:background="#00000000"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="1"
        android:id="@+id/button1"
        android:textSize="40dp"
        android:layout_above="@id/buttonP"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick= "number1"
        android:textColor="@color/white"/>

    <Button
        android:background="#00000000"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="2"
        android:id="@+id/button2"
        android:layout_alignTop="@id/button1"
        android:layout_toRightOf="@id/button1"
        android:layout_toEndOf="@id/button1"
        android:textSize="40dp"
        android:onClick= "number2"
        android:textColor="@color/white"/>

    <Button
        android:background="#00000000"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="3"
        android:id="@+id/button3"
        android:layout_alignTop="@+id/button2"
        android:layout_toRightOf="@+id/button2"
        android:layout_toEndOf="@+id/button2"
        android:textSize="40dp"
        android:textColor="@color/white"/>

    <Button
        android:background="#00000000"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="0"
        android:id="@+id/button0"
        android:layout_toRightOf="@+id/buttonP"
        android:layout_toEndOf="@+id/buttonP"
        android:textSize="40dp"
        android:layout_alignTop="@+id/buttonP"
        android:onClick= "number0"
        android:textColor="@color/white"/>

    <Button
        android:background="#00000000"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="="
        android:id="@+id/buttonEql"
        android:layout_toRightOf="@+id/button2"
        android:layout_toEndOf="@+id/button2"
        android:textSize="40dp"
        android:layout_alignTop="@+id/button0"
        android:textColor="@color/white"/>

    <Button
        android:background="#00000000"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="4"
        android:id="@+id/button4"
        android:textSize="40dp"
        android:layout_above="@+id/button1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/white"/>


    <Button
        android:background="#00000000"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="5"
        android:id="@+id/button5"
        android:textSize="40dp"
        android:layout_above="@+id/button1"
        android:layout_toRightOf="@+id/button4"
        android:layout_toEndOf="@+id/button4"
        android:textColor="@color/white"/>

    <Button
        android:background="#00000000"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="6"
        android:id="@+id/button6"
        android:textSize="40dp"
        android:layout_above="@+id/button3"
        android:layout_toRightOf="@+id/button2"
        android:layout_toEndOf="@+id/button2"
        android:textColor="@color/white"/>

    <Button
        android:background="#00000000"
        android:layout_width="80dp"
        android:layout_height="64dp"
        android:text="x"
        android:id="@+id/buttonMul"
        android:textSize="40dp"
        android:layout_above="@+id/buttonDec"
        android:layout_toRightOf="@+id/button3"
        android:layout_toEndOf="@+id/button3"
        android:textColor="@color/white"/>

    <Button
        android:background="#00000000"
        android:layout_width="80dp"
        android:layout_height="64dp"
        android:text="-"
        android:id="@+id/buttonDec"
        android:textSize="40dp"
        android:layout_above="@+id/buttonAdd"
        android:layout_toRightOf="@+id/button3"
        android:layout_toEndOf="@+id/button3"
        android:textColor="@color/white"/>

    <Button
        android:background="#00000000"
        android:layout_width="80dp"
        android:layout_height="64dp"
        android:text="+"
        android:id="@+id/buttonAdd"
        android:textSize="40dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/buttonEql"
        android:layout_toEndOf="@+id/buttonEql"
        android:textColor="@color/white"/>

    <Button
        android:background="#00000000"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="7"
        android:id="@+id/button7"
        android:textSize="40dp"
        android:layout_above="@+id/button4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/white"/>

    <Button
        android:background="#00000000"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="8"
        android:id="@+id/button8"
        android:textSize="40dp"
        android:layout_alignTop="@+id/button7"
        android:layout_toRightOf="@+id/button7"
        android:layout_toEndOf="@+id/button7"
        android:textColor="@color/white"/>

    <Button
        android:background="#00000000"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="9"
        android:id="@+id/button9"
        android:textSize="40dp"
        android:layout_alignTop="@+id/button8"
        android:layout_toRightOf="@+id/button5"
        android:layout_toEndOf="@+id/button5"
        android:textColor="@color/white"/>

    <Button
        android:background="#00000000"
        android:layout_width="80dp"
        android:layout_height="64dp"
        android:text="DEl"
        android:id="@+id/buttonDel"
        android:textSize="40dp"
        android:layout_alignTop="@+id/button9"
        android:layout_toRightOf="@+id/button9"
        android:layout_toEndOf="@+id/button9"
        android:textColor="@color/white"/>

    <Button
        android:background="#00000000"
        android:layout_width="80dp"
        android:layout_height="64dp"
        android:text="รท"
        android:id="@+id/buttonDiv"
        android:textSize="40dp"
        android:layout_below="@+id/buttonDel"
        android:layout_toRightOf="@+id/button6"
        android:layout_toEndOf="@+id/button6"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/strRes"
        android:layout_width="wrap_content"
        android:layout_height="87dp"
        android:layout_above="@+id/button7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize = "60dp"
        android:textColor="@color/white"/>


</RelativeLayout>
